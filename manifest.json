{
	"name": "Custom Gamelist",
	"description": "Browse custom Steam game lists Chrome extension",
	"version": "1.0",
	"manifest_version": 2,
	"icons" : {
		"64": "icon.png"
	},
	"options_ui": {
		"chrome_style": true,
		"page": "options.html",
		"open_in_tab" : true
	},
	"permissions": [
		"storage",
		"<all_urls>",
		"activeTab"
	],
	"browser_action": {
		"default_icon": { "64": "icon.png" }
	},
	"content_scripts": [
		{
			"matches": [
				"*://store.steampowered.com/*"
			],
			"js": [
				"js/jQuery.min.js",
				"js/jquery.hotkeys.js",
				"js/attrchange.js",
				"js/storage.js",
				"js/api.js",
				"customgamelist.js"
			],
			"css": [
				"css/customgamelist.css"
			]
		}
	],
	"background": {
		"scripts": [
			"js/jQuery.min.js",
			"js/api.js",
			"js/storage.js",
			"browseraction.js"
		]
	}
}
